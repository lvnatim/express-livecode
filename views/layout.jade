doctype html
html
  head
    title= "LiveCode!"
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/Skeleton/css/skeleton.css')
    script(type='text/javascript' src="/javascripts/jquery-3.1.0.js")
  body
    div.container
      div.row
        div.twelve.columns#nav
          ul
            li
              a.button(href="/")= "Home"
            -if (username)
              li
                button.profile= username
              li
                button.logout= "Log Out"
            -else
              li
                button.openLoginForm= "Log In"
              li
                button.openRegisterForm= "Sign Up!" 

    block content
