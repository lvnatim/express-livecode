doctype html
html
  head
    title= "LiveCode!"
    link(rel='stylesheet', href='/build/all.scss.css')
    link(rel='stylesheet', href='/stylesheets/skeleton/css/skeleton.css')
    link(rel='stylesheet', href='/stylesheets/skeleton/css/normalize.css')
    script(type='text/javascript' src="/javascripts/jquery-3.1.0.js")

  body
    div.overlay
    div.navbar
      ul.navbar-left
        li
          a.button(href="/")= "Home"
      ul.navbar-right
        -if (username)
          li
            button.profile= username
          li
            button.logout= "Log Out"
        -else
          li
            input.loginUsername(type="text" placeholder="username")
          li
            input.loginPassword(type="password" placeholder="password")
          li
            button.login= "Log In"
          li
            a.openRegisterForm= "Sign Up!" 
    
    block content
